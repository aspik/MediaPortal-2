    <Border BorderBrush="Black" BorderThickness="1">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                <GradientStop Color="#060D13" Offset="0"/>
                <GradientStop Color="#060D13" Offset="0.3"/>
                <GradientStop Color="#306A99" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <DockPanel>
            <Grid DockPanel.Dock="Top" Margin="5,5,0,0">
                <Image HorizontalAlignment="Left" Source="/Resources/MP2Banner.png" Stretch="None"
                       Margin="10,0,0,0"/>
                <TextBlock HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="5"
                       Foreground="White" FontSize="20"
                       Text="Package Manager"/>
            </Grid>
            <RichTextBox IsReadOnly="True" Background="Black" Margin="5,0,5,5"
                     x:Name="LogBox" x:FieldModifier="private"
                     HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
        </DockPanel>
    </Border>
</Window>
