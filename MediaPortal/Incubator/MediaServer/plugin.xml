<Plugin
    DescriptorVersion="1.0"
    Name="MediaServer"
    PluginId="{45F2C54D-8C0A-4736-AA04-E6F91CD45457}"
    Author="Jason Leonard (McGoober)"
    Copyright="GPL"
    Description="DLNA MediaServer support plugin"
    AutoActivate="true">

  <Version
    PluginVersion="1.0"
    ReleaseDate="2013-11-11 01:00:00 GMT+01:00"
    CurrentAPI="1"/>

  <DependsOn>
    <CoreDependency Name="MediaPortal.Backend" CompatibleAPI="1" />
    <CoreDependency Name="MediaPortal.Common" CompatibleAPI="1" />
    <CoreDependency Name="MediaPortal.Utilities" CompatibleAPI="1" />
    <CoreDependency Name="UPnP" CompatibleAPI="1" />
  </DependsOn>

  <Runtime>
    <Assembly FileName="MediaServer.dll"/>    
    <PluginStateTracker ClassName="MediaPortal.Extensions.MediaServer.MediaServerPlugin"/>
  </Runtime>

  <Register Location="/Media/MetadataExtractors">
    <Instance
        Id="DlnaVideoMetadataExtractor"
        ClassName="MediaPortal.Extensions.MediaServer.MetadataExtractors.DlnaVideoMetadataExtractor"/>
    <Instance
        Id="DlnaAudioMetadataExtractor"
        ClassName="MediaPortal.Extensions.MediaServer.MetadataExtractors.DlnaAudioMetadataExtractor"/>
    <Instance
        Id="DlnaImageMetadataExtractor"
        ClassName="MediaPortal.Extensions.MediaServer.MetadataExtractors.DlnaImageMetadataExtractor"/>
  </Register>
  
</Plugin>

