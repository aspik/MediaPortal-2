<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003" ToolsVersion="4.0">

  <PropertyGroup>
    <PluginDestination>$(SolutionDir)..\Bin\$(SolutionName)\$(OutDir)Plugins\MediaServer\</PluginDestination>
  </PropertyGroup>

  <Target Name="AfterBuild">
    <ItemGroup>
      <PluginFiles Include="$(TargetDir)$(ProjectName).dll" />
      <PluginFiles Include="$(TargetDir)Ude.dll" />
      <PluginFiles Include="$(ProjectDir)Transcoders\*.*" />
    </ItemGroup>

    <CreateItem Include="$(ProjectDir)Transcoders\fonts\**\*.*">
      <Output TaskParameter="Include" ItemName="fonts" />
    </CreateItem>

    <Copy SourceFiles="@(PluginFiles)" DestinationFolder="$(PluginDestination)" />

    <Copy SourceFiles="@(fonts)" DestinationFolder="$(PluginDestination)\fonts\%(RecursiveDir)" />
  </Target>

</Project>